
@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Add Product</h6>
        <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label for="inputname" class="col-sm-2 col-form-label">Product Name</label>
                <div class="col-sm-10">
                    <input type="text" name="Namee" class="form-control" id="inputname">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="number" name="Price" class="form-control" id="inputEmail3">
                </div>
            </div>


            <div class="row mb-3">
                <label for="inputLoc" class="col-sm-2 col-form-label">Sale</label>
                <div class="col-sm-10">
                    <input type="number" name="Sale" class="form-control" id="inputLoc">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Image File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="ImageFile" id="photo">
                </div>
            </div>
           
              <div class="row mb-3">
                <label for="inputLoc" class="col-sm-2 col-form-label">Product Category Name</label>
                <div class="col-sm-10">
                    <select name="ProductCategoryId" class="form-select mb-3 w-50" asp-items="ViewBag.ProductCategoryId"></select>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>

</div>




