
@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Add Product Store</h6>
        <form asp-action="CreateProductStore" method="post">

            <div class="row mb-3">
                <label for="inputLoc" class="col-sm-2 col-form-label">Store Name</label>
                <div class="col-sm-10">
                    <select name="Storeid" class="form-select mb-3 w-50" asp-items="ViewBag.Storeid"></select>
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputLoc" class="col-sm-2 col-form-label">Category Name</label>
                <div class="col-sm-10">
                    <select name="Productid" class="form-select mb-3 w-50" asp-items="ViewBag.Productid"></select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Count</label>
                <div class="col-sm-10 w-50">
                    <input type="number" class="form-control" name="Count" id="photo">
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
                </script>
            }

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>

</div>




