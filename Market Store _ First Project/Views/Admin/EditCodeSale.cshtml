@model Market_Store___First_Project.Models.CodeSale
@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edit Code</h6>
        <form asp-action="EditCodeSale" asp-route-id="@Model.Id" method="post">
            <div class="row mb-3">
                <input type="hidden" name="Id" value=@Model.Id />
                <input type="hidden" name="code" value=@Model.code />

                <label for="inputname" class="col-sm-2 col-form-label">Code</label>
                <div class="col-sm-10">
                    <input disabled type="text" name="code" value="@Model.code" class="form-control" id="inputname">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Sale</label>
                <div class="col-sm-10">
                    <input type="text" name="sale" value=@Model.sale class="form-control" id="inputEmail3">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>

</div>