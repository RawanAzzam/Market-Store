@model Market_Store___First_Project.Models.Product
@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edit Category</h6>
        <form asp-action="EditProduct" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <input type="hidden" name="Id" value=@Model.Id />
                <label for="inputname" class="col-sm-2 col-form-label">Product Name</label>
                <div class="col-sm-10">
                    <input type="text" name="Namee" value="@Model.Namee" class="form-control" id="inputname">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" value="@Model.Price" name="Price" id="photo">

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Sale</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" value="@Model.Sale" name="Sale" id="photo">

                </div>
            </div>
            <input hidden type="file" name="ImagePath" value="@Model.ImagePath" />
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Image File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="ImageFile" id="photo">

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Product Category Name</label>
                <div class="col-sm-10">
                    <select name="ProductCategoryId" class="form-select mb-3 w-50" asp-items="ViewBag.ProductCategoryId"></select>
                </div>
            </div>

            <div class="row mb-3">

                <input hidden name="DateOfAdd" value="@Model.DateOfAdd" />
            </div>


            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>

</div>