@model Market_Store___First_Project.Models.Systemuser
@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; 
    }

<div class="container-fluid pt-4 px-4">
<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Edit User</h6>
    <form asp-action="EditUser"  asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" >
        <div class="row mb-3">
            <input type="hidden" name="Id" value=@Model.Id />
            <label for="inputname" class="col-sm-2 col-form-label">User Name</label>
            <div class="col-sm-10">
                <input type="text" name="Username" value="@Model.Username" class="form-control" id="inputname">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" name="Email" value=@Model.Email class="form-control" id="inputEmail3">
            </div>
        </div>


        <div class="row mb-3">
            <label for="inputLoc" class="col-sm-2 col-form-label">Location</label>
            <div class="col-sm-10">
                <input type="text" name="Location" value=@Model.Location class="form-control" id="inputLoc">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Image File</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" name="ImageFile" id="photo">
              
            </div>
        </div>
        <div class="row mb-3">

            <input hidden name="ImagePath" value="@Model.ImagePath" />
            <input type="password" name="password" hidden class="form-control" id="inputPassword3">


        </div>
       

        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>

</div>