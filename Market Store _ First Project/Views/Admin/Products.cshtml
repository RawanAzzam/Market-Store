@model Tuple<IEnumerable<MultiTables>, MultiTables>
@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }



<section style="background-color: #eee;">
   
    <div class="container py-5 p-5">
        <h1 class="pt-6 text-center">Manage Product</h1>
        <h4 class="mb-0 pt-2 pb-4 text-center"><a asp-action="CreateProduct"> Add Product</a></h4>
       
        <div class="row">
            @foreach (var item in Model.Item1)
            {
    <div class="col-md-12 col-lg-3 mb-4 mb-lg-0">
        <div class="card">
            <div class="d-flex justify-content-between p-3">
                <img class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong"
                     style="width: 35px; height: 35px;" src="~/Images/@item.productCategory.ImagePath" />
                <p class="lead mb-0">@item.productCategory.Name</p>
            </div>
            <img src="~/Images/@item.product.ImagePath"
                 class="card-img-top" height="250" />
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <h5 class="mb-0">@item.product.Namee</h5>
                    <h5 class="text-dark mb-0">$@item.product.Sale</h5>
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <p class="text-muted mb-0">Price: <span class="fw-bold">@item.product.Price</span></p>

                    <div class="ms-auto text-warning">
                        @for (int i = 0; i < Model.Item2.productRate[(int)item.product.Id]; i++)
                        {
        <i class="fa fa-star "></i>}
                        @for (int i = 0; i < (5 - Model.Item2.productRate[(int)item.product.Id]); i++)
                        {
        <i class="fa fa-star fa-w"></i>}

                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between ">
                <div class="row pr-2">
                    <a asp-action="EditProduct" asp-route-id="@item.product.Id" class="btn btn-primary col m-4 p-2">Edit</a>
                    <a asp-action="DeleteProduct" asp-route-id="@item.product.Id" class="btn btn-primary col  m-4">Delete</a>
                </div>
            </div>
            
        </div>
    </div>}



        </div>
    </div>
</section>