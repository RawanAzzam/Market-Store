@model IEnumerable<Market_Store___First_Project.Models.MultiTables>

@{ ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }

<h1 class="pt-4 text-center">Manage Users</h1>


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-10">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h4 class="mb-0 text-center"><a asp-action="CreateUser"> CreateUser</a></h4>
                </div>
                <table class="table table-hover">

                    <thead>
                        <tr>
                            <th scope="col">User Id</th>
                            <th scope="col">Image</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Location</th>
                            <th scope="col">Email</th>
                            <th scope="col">Role name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <th scope="row">@item.systemuser.Id</th>
                <td>
                    <img class="rounded-circle" src="~/Images/@item.systemuser.ImagePath" alt="" style="width: 40px; height: 40px;">
                </td>
                <td>@item.systemuser.Username</td>
                <td>@item.systemuser.Location</td>
                <td>@item.systemuser.Email</td>
                <td>@item.role.Rolename</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.systemuser.Id">Edit</a> |
                    <a asp-action="DeleteUser" asp-route-id="@item.systemuser.Id">Delete</a>
                </td>
            </tr>}

                    </tbody>
                </table>

            </div>
        </div>
        <div class="col-sm-12 col-xl-2">
            <div class="bg-light text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Fliter By :</h6>

                </div>
                <form asp-action="Users">
                    <input class="form-control  m-2" name="userName" type="text" placeholder="Enter Name">
                    <input class="form-control  m-2" name="email" type="text" placeholder="Enter Email">
                    <input class="form-control  m-2" name="userId" type="number" placeholder="Enter User Id">
                    <input class="form-control m-2" name="location" type="text" placeholder="Enter Location">
                    <input class="form-control m-2" name="roleName" type="text" placeholder="Enter Role Name">
                    <button type="submit" class="btn btn-primary ml-3">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" ></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" ></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" ></script>
<script>
    $(document).ready(function () {
        $('.table').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>

