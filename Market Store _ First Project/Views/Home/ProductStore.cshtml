@model IEnumerable<Market_Store___First_Project.Models.ProductStore>
@{ Layout = "~/views/shared/_HomeLayout.cshtml"; }

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Products</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Products</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Product Start -->
<div class="container-xxl py-5 py-product">
    <div class="container">
        <div class="col g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Our Product</h1>
                </div>
            </div>
            <div class="page-content justify-content-center">
                @foreach (var item in Model)
                {
                <div class="product-item" style="height:auto">
                    <div class="position-relative bg-light overflow-hidden">
                        <img class="img-fluid w-100" src="~/Images/@item.Product.ImagePath" alt="">
                        <div class="rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                            <img class="rounded-circle" src="~/Images/@item.Store.StoreLogo" alt="" style="width: 70px; height: 70px;">

                        </div>
                    </div>
                    <div class="text-center p-4">
                        <a class="d-block h5 mb-2" href="">@item.Product.Namee</a>
                        <span class="text-primary me-1">$@item.Product.Sale</span>
                    </div>
                    <div class="d-flex border-top">
                        <small class="w-50 text-center border-end py-2">
                            <a class="text-body"   asp-action="ViewProduct"
                               asp-route-productId="@item.Id"><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                        </small>
                        <small class="w-50 text-center py-2">
                            <a class="text-body"
                               asp-action="AddProductOrder"
                               asp-route-productId="@item.Id"
                              ><i class="fa fa-shopping-bag text-primary me-2"></i>Add to cart</a>
                        </small>
                    </div>
                </div>
                }

            </div>


        </div>

    </div>
</div>
<!-- Product End -->
