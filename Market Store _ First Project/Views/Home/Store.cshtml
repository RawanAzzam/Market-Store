
@model IEnumerable<Market_Store___First_Project.Models.Store>
@{ Layout = "~/views/shared/_HomeLayout.cshtml";}

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">Products</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-body" href="#">Pages</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Products</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Product Start -->
<div class="container-xxl py-5 py-product">
    <div class="container">
        <div class="col g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Our Store</h1>
                    <p>Tempor ut dolore lorem kasd vero ipsum sit eirmod sit. Ipsum diam justo sed rebum vero dolor duo.</p>
                </div>
            </div>
            <div class="page-content justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="card" style="width: 18rem;">
                        <img src="~/Images/@item.StoreLogo" class="card-img-top" width="100" height="300" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@item.Storename</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a asp-action="ProductStore" asp-route-storeId="@item.Id" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                }
               
            </div>
           

        </div>
        
    </div>
</div>
<!-- Product End -->
